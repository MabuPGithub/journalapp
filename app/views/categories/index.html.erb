<nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
  <a class="navbar-brand" href="#">Journal App</a>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="nav navbar-nav ml-auto">
      <li class="nav-item active">
        <%= button_to "Logout", destroy_user_session_path, :class => "btn btn-primary", method: :delete  %>
      </li>
    </ul>
  </div>
</nav>

<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-body">
    <h2 class='card-title'>
      <span><%= current_user.first_name %>'s Categories</span>
      <%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %>
    </h2>

    <% @categories.each do |category| %>
      <%= link_to category, class: 'text-decoration-none' do %>
        <div class="card">
          <div class="card-body">
            <h5><b><%= category.name %></b></h5>
            <p class='text-secondary'><%= category.description %></p>
            <div class="button_group">
              <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary' %>
              <%= link_to 'Destroy', category, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
          </div>
      <% end %>
    <% end %>
  </div>
</div>





