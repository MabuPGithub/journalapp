<p id="notice"><%= notice %></p>

<h1><%= @category.name %></h1>

<p>
  <strong>Description:</strong>
  <%= @category.description %>
</p>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>

<hr>

<h1>!!Task Priority!!</h1>
<table>
  
  <% @category.tasks.each do |task| %>
    <% if task.deadline == Date.today %>
    <tr>
    <td><%= task.name %></td>
    <td><%= link_to 'Show', [task.category, task] %></td>
    </tr>
    <% end %>
    <% end %>
</table>
<hr>

<h1>Listing tasks</h1>

<%= link_to 'New Task', new_category_task_path(@category.id) %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th>Deadline</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @category.tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= task.status %></td>
    <td><%= task.deadline %></td>
    <td><%= link_to 'Show', [task.category, task] %></td>
    <td><%= link_to 'Edit', edit_category_task_path(task.category, task) %></td>
    <td><%= link_to 'Destroy', [task.category, task], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

