<%= form_with(model: [@task.category, @task]) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-container">
  <div class="form-group">
    <%= f.label :name, "Name: ", class: 'form-label'  %><br/>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :description, "Description: ", class: 'form-label'  %><br />
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.label :status, "Status: ", class: 'form-label'  %><br />
    <%= f.select :status, Task::STATUS_OPTIONS, {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :deadline, "Deadline: ", class: 'form-label'  %><br />
    <%= f.date_field :deadline %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-secondary"%>
  </div>
</div>
<% end %>
